<html>
    <head>
        <title>Basic form</title>
        <link rel="stylesheet" href="./form.css">
    </head>
    <body>
        <div class="form-container">
            <form class="personal-form" method="POST">
                <h1>Student's Registration</h1></br>
                <h2>Basic Details</h2></br>
                <div class="formdata">
                <label for="JEERoll">JEE Roll No. :</label>
                <input class="input" type="number" name="JEERoll" id="JEERoll"  />
                </div></br></br>
                
                <div class="formdata">
                <label for="name">Student's Name :</label>
                <input class="input" type="text" id="student_name" name="name"  />
                </div></br></br>
                
                <div class="formdata">
                <label for="father's name">Father's Name :</label>
                <input type="text" id="father_name" name="father_name"/>
                </div></br></br>
                <div class="formdata">
                <label for="mother's name">Mother's Name :</label>
                <input type="text" id="mother_name" name="mother_name"/>
                </div></br></br>
                <div class="formdata">
                <label for="DOB">Date Of Birth :</label>
                <input type="date" id="dob" name="dob"/>
                </div></br></br>
                <div class="formdata">
                <label for="gender">Gender :</label>
                <select name="gender">
                    <option value="select">Please Select</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="N/A">N/A</option>
                </select>
                </div></br></br>
                <div class="formdata">
                <label for="year">Year :</label>
                <select name="year">
                    <option value="select">Please Select</option>
                    <option value="1st">1st Year</option>
                    <option value="2nd">2nd Year</option>
                    <option value="3rd">3rd Year</option>
                    <option value="4th">4th Year</option>
                </select>
                </div></br></br>
                <div class="formdata">
                <label for="branch">Branch :</label>
                <select name="branch">
                    <option value="select">Please Select</option>
                    <option value="CSE">Computer Science and Engineering</option>
                    <option value="EL">Electronics Engineering</option>
                    <option value="EE">Electrical Engineering</option>
                </select>
                </div></br></br>
                <div class="formdata">
                <label for="mobile">Mobile Number :</label>
                <input type="number" id="phone_number" name="Phone_number"/>
                </div></br></br>

                <div class="formdata">
                <label for="email">Email Address :</label>
                <input type="text" id="email" name="email" />
                </div></br></br>
                <div class="formdata">
                <label for="aadhar">Aadhar Number :</label>
                <input type="number" id="aadhar" name="aadhar_number"/>
                </div></br></br>
                
                <input class="btn" type="submit" value="Submit"/> 
                
            </form>
        </div>
        <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
        <script src="index.js"></script>
    </body>
</html>